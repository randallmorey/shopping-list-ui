<Section::Panel as |panel|>

  <panel.header as |header|>
    <header.title>{{t "resources.item_plural"}}</header.title>
    <button class="button is-dark is-outlined">Add Item</button>
  </panel.header>

  <panel.body>
    <ListSet as |listSet|>
      {{#each this.groupedItems as |group|}}
      <listSet.heading>
        {{group.category.name}}
      </listSet.heading>
      <listSet.list as |list|>
        {{#each group.items as |item|}}
          <list.item as |listItem|>
            <listItem.link @route="items.item" @model={{item}}>
              {{item.name}}
            </listItem.link>
          </list.item>
        {{/each}}
      </listSet.list>
      {{/each}}
    </ListSet>
  </panel.body>

</Section::Panel>
