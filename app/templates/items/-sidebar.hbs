<Section::Panel as |panel|>

  <panel.header as |header|>
    <header.title>{{t "resources.item_plural"}}</header.title>
    <Link::Add @route="items">{{t "actions.items.add"}}</Link::Add>
  </panel.header>

  <panel.body>
    <ListSet as |listSet|>
      {{#each @model.categories as |category|}}
        {{#if category.items}}
          <listSet.heading>{{category.name}}</listSet.heading>
          <listSet.list as |list|>
            {{#each category.items as |item|}}
              <list.item as |listItem|>
                <listItem.link @route="items.item" @model={{item}}>
                  {{item.name}}
                  <FaIcon @icon="chevron-right" />
                </listItem.link>
              </list.item>
            {{/each}}
          </listSet.list>
        {{/if}}
      {{/each}}
      {{#if this.uncategorized}}
        <listSet.heading>{{t "categories.uncategorized"}}</listSet.heading>
        <listSet.list as |list|>
          {{#each this.uncategorized as |item|}}
            <list.item as |listItem|>
              <listItem.link @route="items.item" @model={{item}}>
                {{item.name}}
                <FaIcon @icon="chevron-right" />
              </listItem.link>
            </list.item>
          {{/each}}
        </listSet.list>
      {{/if}}
    </ListSet>
  </panel.body>

</Section::Panel>
