<Form::Panel {{action "submit" on="submit"}} as |form panel|>

  <panel.header as |header|>
    <form.cancel {{action "cancel"}} />
    <header.title>{{@model.name}}</header.title>
    <form.save
      @loading={{@model.isSaving}}
      disabled={{@model.isClean}} />
  </panel.header>

  <panel.body>
    <Container>

      {{!-- TODO  replace this with html markup for a text input with a label --}}
      <Form::Input @name={{@model.name}} />

      <ListSet as |listSet|>
        {{#unless this.categories}}
          <listSet.emptyListMessage>
            {{t 'list.no-item-categories'}}
          </listSet.emptyListMessage>
        {{else}}
          <fieldset>
            <listSet.heading>
              <legend>{{t "resources.item-category_plural"}}</legend>
            </listSet.heading>
            <listSet.list as |list|>
              {{#each this.categories as |category| }}
                <list.item>

                  {{!-- TODO replace this with html markup for a radio input with a label --}}
                  <Form::RadioLabel @name={{@model.name}}>
                    {{category.name}}
                  </Form::RadioLabel>

                </list.item>
              {{/each}}
            </listSet.list>
          </fieldset>
        {{/unless}}
      </ListSet>


      <Link::Add @route="items">{{t "actions.item-category.add"}}</Link::Add>

    </Container>
  </panel.body>

</Form::Panel>
