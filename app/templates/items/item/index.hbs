<Form::Panel {{action "submit" on="submit"}} as |form panel|>

  <panel.header as |header|>
    <form.cancel {{action "cancel"}} />
    <header.title>{{@model.name}}</header.title>
    <form.save
      @loading={{@model.isSaving}}
      disabled={{@model.isClean}} />
  </panel.header>

  <panel.body>
    <Container>

      <label for="item">{{t 'resources.item'}}</label>
      {{@model.category.name}}
      <Input
        class="input"
        aria-label={{@model.name}}
        @id="item"
        @type="text"
        @value={{@model.name}}
         />

      <ListSet as |listSet|>
        {{#unless this.categories}}
          <listSet.emptyListMessage>
            {{t 'list.no-item-categories'}}
          </listSet.emptyListMessage>
        {{else}}
          <fieldset>
            <listSet.heading>
              <legend>{{t "resources.item-category_plural"}}</legend>
            </listSet.heading>
            <listSet.list as |list|>
              {{#each this.categories as |category| }}
                <list.item>
                  <label>
                    <RadioButton
                      value=category.name
                      name="categories"
                      groupValue=@model.category.name
                    >
                      {{category.name}}
                    </RadioButton>
                  </label>
                </list.item>
              {{/each}}
            </listSet.list>
          </fieldset>
        {{/unless}}
      </ListSet>


      <Link::Add @route="items">{{t "actions.item-category.add"}}</Link::Add>

    </Container>
  </panel.body>

</Form::Panel>
