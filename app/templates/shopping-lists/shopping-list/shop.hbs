<Section::Panel as |panel|>

  <panel.header as |header|>
    <header.columnLeft>
      <Link::Home>{{t "resources.home"}}</Link::Home>
    </header.columnLeft>
    <header.columnCenter>
      <header.title>{{t "titles.shopping-list.shop"}}</header.title>
    </header.columnCenter>
    <header.columnRight>
      <Button::Done />
    </header.columnRight>
  </panel.header>

  <panel.body>
    <ListSet as |listSet|>
      {{#unless @model.shoppingListItems}}
        <listSet.emptyListMessage>
          {{t 'list.no-shopping-list-items'}}
        </listSet.emptyListMessage>
      {{/unless}}

      {{#each this.categoryGroups as |categoryGroup|}}
        <listSet.group as |group|>
          <group.heading>{{categoryGroup.category.name}}</group.heading>
          <group.list as |list|>
            {{#each categoryGroup.shoppingListItems as |item|}}
              <list.item as |listItem|>
                <button role="checkbox">
                  <Tag>{{item.quantity}}</Tag>
                  <Multiline as |Line|>
                    <Line>{{item.name}}</Line>
                    {{#if item.notes}}
                      <Line @secondary={{true}}>{{item.notes}}</Line>
                    {{/if}}
                  </Multiline>
                  <FaIcon @icon="{{if item.quantity 'chevron-right' 'plus'}}" />
                </button>
              </list.item>
            {{/each}}
          </group.list>
        </listSet.group>
      {{/each}}

      {{#if this.uncategorized}}
        <listSet.group as |group|>
          <group.heading>{{t "categories.uncategorized"}}</group.heading>
          <group.list as |list|>
            {{#each this.uncategorized as |item|}}
              <list.item as |listItem|>
                <button
                  class="list-item-link"
                  {{action "togglePurchase" item}}
                  role="checkbox"
                  aria-checked={{item.purchased}}>
                  <Tag>{{item.quantity}}</Tag>
                  <Multiline as |Line|>
                    <Line>{{item.name}}</Line>
                    {{#if item.notes}}
                      <Line @secondary={{true}}>{{item.notes}}</Line>
                    {{/if}}
                  </Multiline>
                  <span class="fa-layers">
                    <FaIcon @icon="square" @size="2x" @prefix="far"/>
                    {{#if item.purchased}}
                    <FaIcon @icon="check" @size="2x" @transform="shrink-5"/>
                    {{/if}}
                  </span>
                </button>
              </list.item>
            {{/each}}
          </group.list>
        </listSet.group>
      {{/if}}

    </ListSet>
  </panel.body>

</Section::Panel>
