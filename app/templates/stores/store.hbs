<Store::Form
  @model={{@model}}
  @title={{t "titles.store.edit"}}
  @submit={{route-action "submit" @model}}
  @cancel={{route-action "cancel" @model}}
  @delete={{route-action "delete" @model}}>

  {{#if @model.categories}}
    <ListSet as |listSet|>
      <listSet.group as |group|>
        <group.heading>
          {{t "titles.store-item-category.order"}}
        </group.heading>
        <group.list @ordered={{true}} as |list|>
          {{#each @model.categories as |category|}}
            <list.item>
              {{category.itemCategory.name}} /
              {{category.itemCategory.id}} /
              {{category.order}}
            </list.item>
          {{/each}}
        </group.list>
      </listSet.group>
    </ListSet>
  {{/if}}

</Store::Form>
